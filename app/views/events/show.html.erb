<div class="jumbotron">
  <h1 class="display-4"><%= @event.title%></h1>
  <p class="lead">Event Description: <%= @event.description%></p>
  <p class="lead">Venue: <%= @event.location%></p>
  <p class="lead"><%= @event.date.to_date.to_formatted_s(:long) %></p>
  <hr class="my-4">
  <p>Event created by: <%= @event.creator.name %></p>
  <% if current_user.attended_events.include?(@event) || Date.parse("#{@event.date}").past? %>
    <div class='list-group'>
      <%= button_to 'Attend Event', attend_path, params: { event_id: @event.id }, method: 'get', class: 'list-group-item btn btn-success btn-lg disabled', 'aria-disabled' => "true" %>
    </div>
  <% else %>
    <%= button_to 'Attend Event', attend_path, params: { event_id: @event.id }, method: 'get', class: 'btn btn-success btn-lg' %>
  <% end %>
</div>
